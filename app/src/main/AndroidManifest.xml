          package="com.dhbw.luatraining">

    <application
        android:allowBackup="true"
        android:icon="@drawable/dhbw_small"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".BaseActivity" android:screenOrientation="portrait">
        </activity>
        <activity android:name=".QuestionActivity" android:screenOrientation="portrait">
        </activity>
        <activity android:name=".StatsActivity" android:screenOrientation="portrait">
        </activity>
        <activity android:name=".SettingsActivity" android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>